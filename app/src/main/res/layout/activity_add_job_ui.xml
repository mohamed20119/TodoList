<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJob.AddJobUI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="35dp">




            <EditText
                android:id="@+id/jobtitle"
                android:textColor="#eeeeee"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Job Name" />



        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Date"
                android:textSize="18sp"
                android:textColor="#eeeeee"
                android:onClick="AddDate"
                android:inputType="text" />


            <TextView
                android:id="@+id/time"
                android:textColor="#eeeeee"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Time"
                android:onClick="AddTime"
                android:inputType="text" />


        </LinearLayout>

        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/addbtn"
            android:background="#3d1f1f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addjob"
            android:text="Add job" />

        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/updbtn"
            android:background="#3d1f1f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="UpdateJob"
            android:text="Update job" />

        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/deletebtn"
            android:background="#3d1f1f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DeleteJob"
            android:text="Delete job" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>